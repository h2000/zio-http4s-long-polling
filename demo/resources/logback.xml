<!--    <logger name="slick.relational.ResultConverterCompiler" level="INFO"/>-->
<!--    <logger name="slick.jdbc.JdbcBackend" level="INFO"/>-->
    <logger name="slick.jdbc.StatementInvoker.result" level="DEBUG"/>
</configuration>